<div class="row">
  <div class="upload-form">
    <form method="post" action="/upload" enctype="multipart/form-data">
      <div class="form-group">
        <h1>Upload File</h1>
        <label for="upload-file">Upload CSV File</label>
        <input type="file" class="form-control-file" id="upload-file" name="myFile">
      </div>
      <div class="form-group">
        <p>Please select the output formats</p>
        <label class="checkbox">
          <input type="checkbox" name="outputFormat" value="xml">XML
        </label>
        <label class="checkbox">
          <input type="checkbox" name="outputFormat" value="json">JSON
        </label>
        <label class="checkbox">
          <input type="checkbox" name="outputFormat" value="html">HTML
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <br>
      {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
      {{/if}}
    </form>
  </div>
</div>
